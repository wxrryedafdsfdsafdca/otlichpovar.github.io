{
  "name": "ot-lichny-povar-mobile",
  "version": "1.0.0",
  "description": "Мобильное приложение От-Личный повар",
  "main": "index.html",
  "scripts": {
    "build": "echo 'Build completed'",
    "build:mobile": "node build-mobile.js",
    "build:icons": "node generate-icons.js",
    "cap:init": "npx cap init",
    "cap:add": "npx cap add",
    "cap:sync": "npx cap sync",
    "cap:open:android": "npx cap open android",
    "cap:open:ios": "npx cap open ios",
    "android": "npm run cap:sync && npm run cap:open:android",
    "ios": "npm run cap:sync && npm run cap:open:ios",
    "build:android": "npx cap sync && npx cap build android",
    "build:ios": "npx cap sync && npx cap build ios",
    "deploy:android": "node deploy.js android",
    "deploy:ios": "node deploy.js ios",
    "serve": "python -m http.server 8000",
    "serve:https": "python -m http.server 8000 --ssl"
  },
  "keywords": [
    "food",
    "delivery",
    "mobile",
    "capacitor"
  ],
  "author": "От-Личный повар",
  "license": "MIT",
  "devDependencies": {
    "@capacitor/android": "^5.7.8",
    "@capacitor/cli": "^5.7.8",
    "@capacitor/core": "^5.7.8",
    "@capacitor/ios": "^5.7.8"
  }
}
